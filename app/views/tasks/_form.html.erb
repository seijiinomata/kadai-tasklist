<%=form_for(task) do |f| %>

<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |task| %>

          <li>
<%= task %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

<div class="form-group">

<%= f.label :status, '状態' %>
  
  <div class= col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6>
<%= f.text_field :status, class: 'form-control' %>
  </div>
</div>
  <div class="form-group">

<%= f.label :content, 'タスク' %>

  <div class= col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6>
<%= f.text_field :content, class: 'form-control' %>
  </div>
  </div>

<%= f.submit '投稿', class: 'btn btn-primary' %>

<% end %>
